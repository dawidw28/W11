<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="10dp"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
>


    <LinearLayout
            android:layout_width="334dp"
            android:layout_height="102dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/row_lay" android:layout_marginLeft="5dp">

        <TextView

                android:id="@+id/leader_text"
                android:layout_width="164dp"
                android:layout_height="90dp"
        />

        <LinearLayout
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" android:id="@+id/room_text"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" android:id="@+id/date_text"/>
            <TextView
                    android:layout_width="123dp"
                    android:layout_height="30dp" android:id="@+id/time_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>