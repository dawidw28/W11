<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Spinner
            android:layout_width="297dp"
            android:layout_height="26dp"
            android:id="@+id/spinner" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.399"/>
    <Button
            android:text="Choose a date"
            android:layout_width="168dp"
            android:layout_height="49dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp" app:layout_constraintHorizontal_bias="0.621"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <RadioGroup
            android:layout_width="220dp"
            android:layout_height="128dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" android:layout_marginEnd="106dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/radio_group">
        <RadioButton
                android:layout_width="215dp"
                android:layout_height="50dp" android:id="@+id/radioButton" android:layout_weight="1"/>
        <RadioButton
                android:layout_width="215dp"
                android:layout_height="50dp" android:id="@+id/radioButton2" android:layout_weight="1"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>